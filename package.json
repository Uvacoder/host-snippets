{
  "name": "snippets",
  "version": "1.0.0",
  "description": "Host code snippets online",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rm -rf public",
    "build": "npm-run-all --parallel build:client build:server",
    "build:client": "webpack --config build/webpack.client.config.js",
    "build:server": "webpack --config build/webpack.server.config.js",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "mocha-webpack --webpack-config build/webpack.test.config.js --require tests/unit/setup.js tests/unit/specs/**/*.spec.js",
    "test:watch": "npm run test -- --watch",
    "lint": "xo --reporter table"
  },
  "author": "Arnelle Balane <arnellebalane@gmail.com> (https://arnellebalane.com/)",
  "license": "MIT",
  "devDependencies": {
    "@vue/test-utils": "1.0.0-beta.11",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.2",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.1",
    "commitizen": "2.9.6",
    "copy-webpack-plugin": "4.4.1",
    "css-loader": "0.28.9",
    "cz-conventional-changelog": "2.1.0",
    "extract-text-webpack-plugin": "3.0.2",
    "jsdom": "11.6.2",
    "jsdom-global": "3.0.2",
    "mocha": "5.0.0",
    "mocha-webpack": "1.0.1",
    "nodemon": "1.14.12",
    "npm-run-all": "4.1.2",
    "sequelize-cli": "3.2.0",
    "sinon": "4.2.2",
    "style-loader": "0.20.1",
    "uglifyjs-webpack-plugin": "1.1.8",
    "vue-loader": "14.1.1",
    "vue-template-compiler": "2.5.13",
    "webpack": "3.10.0",
    "webpack-merge": "4.1.1",
    "webpack-node-externals": "1.6.0",
    "workbox-webpack-plugin": "2.1.2",
    "xo": "0.20.3"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "xo": {
    "parser": "babel-eslint",
    "space": 4,
    "envs": [
      "browser",
      "mocha",
      "serviceworker"
    ],
    "rules": {
      "operator-linebreak": [
        "error",
        "before"
      ],
      "no-await-in-loop": [
        "off"
      ],
      "import/extensions": [
        "off"
      ],
      "import/no-unresolved": [
        "off"
      ],
      "import/no-unassigned-import": [
        "error",
        {
          "allow": [
            "**/*.css"
          ]
        }
      ]
    },
    "globals": [
      "WorkboxSW"
    ],
    "overrides": [
      {
        "files": "database/models/!(index).js",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      }
    ]
  },
  "dependencies": {
    "auto-load": "3.0.0",
    "axios": "0.17.1",
    "dotenv": "5.0.0",
    "highlightjs": "9.10.0",
    "pg": "7.4.1",
    "sequelize": "4.33.2",
    "server": "1.0.17",
    "vue": "2.5.13",
    "vue-router": "3.0.1",
    "vue-server-renderer": "2.5.13",
    "vuex": "3.0.1",
    "workbox-sw": "2.1.2"
  }
}
